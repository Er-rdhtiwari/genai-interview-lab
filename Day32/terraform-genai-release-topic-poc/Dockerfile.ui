# Dockerfile.ui - Streamlit UI

FROM python:3.11-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy only the UI code (and optionally shared src if you reuse models)
COPY pyproject.toml ./
COPY ui ./ui

# Install Streamlit + HTTP client
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
      streamlit \
      httpx \
      python-dotenv

ENV PYTHONUNBUFFERED=1
ENV PORT=8501

EXPOSE 8501

# This assumes your main UI script is ui/app.py
# and that it reads API_BASE_URL from env.
CMD ["streamlit", "run", "ui/app.py", "--server.port=8501", "--server.address=0.0.0.0"]
