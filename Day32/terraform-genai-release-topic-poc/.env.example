# --- LLM / Provider keys (local only; in AWS/EKS use Secrets Manager or K8s secrets) ---
OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-xxx
GOOGLE_API_KEY=AIzxxx
OLAMA_API_KEY=olama
HF_TOKEN=hf_xxx
GROK_MODEL=xai-xxx

# --- App runtime ---
APP_ENV=local
PORT=8000

# --- Database (Postgres / RDS) ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=genai
DB_PASSWORD=genai
DB_NAME=genai

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- LLM routing / behavior ---
# openai | oss  (or later: "hybrid")
LLM_DEFAULT_PROVIDER=openai
# If true, always return mock responses regardless of provider
USE_MOCK_LLM=true

# --- Internal service URLs (for local/dev) ---
# FastAPI Release Notes API
RELEASE_API_BASE_URL=http://localhost:8000
# Model Service (OSS model + optional provider routing)
MODEL_SERVICE_BASE_URL=http://localhost:8001

# UI could use RELEASE_API_BASE_URL + MODEL_SERVICE_BASE_URL to call backend/model.
